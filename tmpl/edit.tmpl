{{ define "Edit" }}
{{ template "Header" }}
{{ template "Menu" }}
    <h2>Edit employee</h2>

<form  method="POST" action="update">
    <input type="hidden" name="id" value="{{ .Id }}" />
    <label>Name</label><input type="text" name="name" value="{{ .Name }}" /><br/>
    <label>Email</label><input type="text" name="email" value="{{ .Email }}" /></br>
    <label>Salary</label><input type="number" name="salary" step="any" value="{{ .Salary }}" /></br>
    <input  type="submit" value="save user" /></br>
</form>
    <a href="/delete?id={{ .Id }}">Delete</a>
{{ template "Footer" }}
{{ end }}

