    {{ define "Index" }}
       {{ template "Header" }}
          {{ template "Menu" }}


    <h2>Usuários cadastrados ()</h2>

    <table border="1">
        <thead>
            <tr>
                <td>Id</td>
                <td>Nome</td>
                <td>Email</td>
                <td>Ação</td>
            </tr>
        </thead>

        <tbody>
            {{range .}} for
            <tr key="index">
                <td>{{.Id}}</td>
                <td>{{.Name}}</td>
                <td>{{.Email}}</td>
                <td> <a href="/show?id={{.Id}}">Vizualizar</a> | <a href="/edit?id={{.Id}}">Editar</a> </td>
            </tr>
            {{ end }}
        </tbody>
    </table>
    <br/>

    <a href="/csv"  download=go.csv> DOWNLOAD CSV </a>

 {{template "Footer"}}
 {{ end }}